<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".GalleryFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_4sdp">

        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:text="NFT"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/ic_baseline_search_24" />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="@string/notable_collections"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white" />
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <include layout="@layout/collectionitem"/>
            <include layout="@layout/collectionitem"/>
            <include layout="@layout/collectionitem"/>
            <include layout="@layout/collectionitem"/>
            <include layout="@layout/collectionitem"/>
            <include layout="@layout/collectionitem"/>
            <include layout="@layout/collectionitem"/>
        </LinearLayout></HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_8ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leaderboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/highlight"
                android:paddingHorizontal="@dimen/_12ssp"
                android:paddingVertical="@dimen/_4sdp"
                android:text="Stat"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />
            <TextView
                android:id="@+id/see_all1"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textColor="@color/light_gray"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="@string/see_all"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginHorizontal="@dimen/_12ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/highlight"
                android:paddingHorizontal="@dimen/_12ssp"
                android:paddingVertical="@dimen/_4sdp"
                android:text="@string/ranking"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/fav"
                android:text="Market Cap"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="1D Volume"
                android:textColor="@color/light_gray" />
        </RelativeLayout>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>
        <include layout="@layout/rankingitem"/>

    </LinearLayout></androidx.core.widget.NestedScrollView>

</FrameLayout>