<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CE251919">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/closesheet"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/imgscan"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_below="@+id/closesheet"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_document_scanner_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txt_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/closesheet"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toRightOf="@id/imgscan"
        android:text="Scan"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_below="@+id/imgscan"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_lock_open_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txtLocknow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgscan"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_toRightOf="@id/img_lock"
        android:text="Lock Now"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>